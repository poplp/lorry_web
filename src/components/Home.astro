		</div>

        <div class="flex items-center gap-4">
            <a href={`/${otherLang}`} class="text-sm font-medium text-slate-500 hover:text-primary transition-colors">
                {otherLangLabel}
            </a>
            <a href="#contact" class="bg-primary text-white px-6 py-2.5 rounded-lg text-sm font-medium hover:opacity-90 transition-opacity">
                {t('btn.connect')}
            </a>
        </div>
	</nav>

	<!-- Hero Section -->

const t = useTranslations(lang as any);

const otherLang = lang === 'en' ? 'zh' : 'en';
const slugName = book.slug.split('/').slice(1).join('/');
const allBooks = await getCollection('books');
const translatedBook = allBooks.find(p => p.slug === `${otherLang}/${slugName}`);

---
import { type CollectionEntry, getCollection } from 'astro:content';
import Layout from '../../../layouts/Layout.astro';
import { useTranslations } from '../../../i18n/utils';
import AntifragileLegend from '../../../components/AntifragileLegend.astro';

export async function getStaticPaths() {
  const books = await getCollection('books');
  return books.map((book) => {
    const [lang, ...slugParts] = book.slug.split('/');
    const slug = slugParts.join('/');
    return {
      params: { lang, slug },
      props: { book },
    };
  });
}

interface Props {
  book: CollectionEntry<'books'>;
}

const { book } = Astro.props;
const { lang } = Astro.params;
const { Content } = await book.render();
const t = useTranslations(lang as any);

const otherLang = lang === 'en' ? 'zh' : 'en';
const slugName = book.slug.split('/').slice(1).join('/');
const allBooks = await getCollection('books');
const translatedBook = allBooks.find(p => p.slug === `${otherLang}/${slugName}`);

---
import { type CollectionEntry, getCollection } from 'astro:content';
import Layout from '../../../layouts/Layout.astro';
import { useTranslations } from '../../../i18n/utils';
import { ui, languages } from '../../../i18n/ui';

export async function getStaticPaths() {
	const posts = await getCollection('blog');
	return posts.map((post: CollectionEntry<'blog'>) => {
		const [lang, ...slugParts] = post.slug.split('/');
        const slug = slugParts.join('/');
		return {
			params: { lang, slug },
			props: { post },
		};
	});
}

interface Props {
	post: CollectionEntry<'blog'>;
}

const { post } = Astro.props;
const { lang } = Astro.params;
const { Content } = await post.render();
const t = useTranslations(lang as any);

// Check if translation exists
const otherLang = lang === 'en' ? 'zh' : 'en';
const otherLangLabel = languages[otherLang];
const homeLink = `/${lang}`;

// Assuming slug structure is consistent: lang/slug-name
const slugName = post.slug.split('/').slice(1).join('/');
const allPosts = await getCollection('blog');
const translatedPost = allPosts.find((p: CollectionEntry<'blog'>) => p.slug === `${otherLang}/${slugName}`);
---

<Layout title={post.data.title} lang={lang}>
	<nav class="flex items-center justify-between px-8 py-6 max-w-7xl mx-auto border-b border-slate-100">
		<div class="text-2xl font-bold flex items-center gap-2">
            <a href={`/${lang}`} class="text-slate-900 no-underline">P.</a>
		</div>
        
        <div class="hidden md:flex items-center gap-8 text-sm font-medium text-slate-600">
			<a href={homeLink} class="text-slate-900 font-semibold">{t('nav.home')}</a>
            <a href={`/${lang}#products`} class="hover:text-primary transition-colors">{t('nav.products')}</a>
			<a href={`/${lang}#services`} class="hover:text-primary transition-colors">{t('nav.services')}</a>
            <a href={`/${lang}/blog`} class="text-primary hover:text-primary transition-colors">{t('nav.blog')}</a>
            <a href={`/${lang}/books`} class="hover:text-primary transition-colors">{t('nav.books')}</a>
			<a href={`/${lang}#contact`} class="hover:text-primary transition-colors">{t('nav.contact')}</a>
		</div>

        <div class="flex items-center gap-4">
            <a href={translatedPost ? `/${otherLang}/blog/${slugName}` : `/${otherLang}/blog`} class="text-sm font-medium text-slate-500 hover:text-primary transition-colors">
                {otherLangLabel}
            </a>
            <a href={`/${lang}#contact`} class="bg-primary text-white px-6 py-2.5 rounded-lg text-sm font-medium hover:opacity-90 transition-opacity">
                {t('btn.connect')}
            </a>
            <!-- Mobile Menu Button -->
            <button id="mobile-menu-btn" class="md:hidden text-slate-900 focus:outline-none p-2 ml-2" aria-label="Toggle menu">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
                </svg>
            </button>
        </div>
    </nav>

    <!-- Mobile Menu Overlay -->
    <div id="mobile-menu" class="fixed inset-0 bg-white z-50 hidden flex-col pt-24 px-8 md:hidden transition-all duration-300">
        <button id="close-menu-btn" class="absolute top-6 right-8 text-slate-900 focus:outline-none p-2" aria-label="Close menu">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
            </svg>
        </button>
        <div class="flex flex-col gap-8 text-xl font-medium text-slate-600 items-center">
            <a href={homeLink} class="text-slate-900 font-semibold mobile-link">{t('nav.home')}</a>
            <a href={`/${lang}#products`} class="hover:text-primary transition-colors mobile-link">{t('nav.products')}</a>
            <a href={`/${lang}#services`} class="hover:text-primary transition-colors mobile-link">{t('nav.services')}</a>
            <a href={`/${lang}/blog`} class="hover:text-primary transition-colors mobile-link">{t('nav.blog')}</a>
            <a href={`/${lang}/books`} class="hover:text-primary transition-colors mobile-link">{t('nav.books')}</a>
            <a href={`/${lang}#contact`} class="hover:text-primary transition-colors mobile-link">{t('nav.contact')}</a>
        </div>
    </div>

    <script>
        const mobileMenuBtn = document.getElementById('mobile-menu-btn');
        const closeMenuBtn = document.getElementById('close-menu-btn');
        const mobileMenu = document.getElementById('mobile-menu');
        const mobileLinks = document.querySelectorAll('.mobile-link');

        function toggleMenu() {
            if (mobileMenu) {
                mobileMenu.classList.toggle('hidden');
                mobileMenu.classList.toggle('flex');
                document.body.classList.toggle('overflow-hidden');
            }
        }

        mobileMenuBtn?.addEventListener('click', toggleMenu);
        closeMenuBtn?.addEventListener('click', toggleMenu);
        
        mobileLinks.forEach(link => {
            link.addEventListener('click', toggleMenu);
        });
    </script>

	<main class="max-w-3xl mx-auto px-8 py-12">
        <article class="prose prose-slate prose-lg max-w-none prose-headings:font-bold prose-headings:text-slate-900 prose-p:text-slate-600 prose-a:text-primary">
            <div class="mb-8 text-center">
                <div class="text-sm text-slate-500 mb-2">
                    {post.data.pubDate.toLocaleDateString(lang === 'zh' ? 'zh-CN' : 'en-US', { year: 'numeric', month: 'long', day: 'numeric' })}
                </div>
                <h1 class="text-3xl md:text-5xl font-bold text-slate-900 mb-4 leading-tight">{post.data.title}</h1>
                <p class="text-xl text-slate-500 font-light">{post.data.description}</p>
            </div>
            
            {post.data.heroImage && (
                <div class="rounded-2xl overflow-hidden bg-slate-100 mb-12 aspect-video flex items-center justify-center text-slate-400">
                    {/* <img src={post.data.heroImage} alt="" class="w-full h-full object-cover" /> */}
                    Hero Image
                </div>
            )}

            <div class="mt-8">
                <Content />
            </div>
        </article>
	</main>
</Layout>
